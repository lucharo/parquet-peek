{
  "manifest_version": 3,
  "name": "Parquet Peek",
  "version": "1.0",
  "description": "Browse, sort & filter Parquet files from your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["viewer.html", "viewer-utils.js"],
    "matches": ["<all_urls>"]
  }]
}
